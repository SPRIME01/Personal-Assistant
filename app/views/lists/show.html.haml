%h1= "#{@list.name} List"
%p#notice= notice
%p quick statistics might go here

.list_items
  %h2 Events
  %ul
    - @list.events.each do |event|
      = render :partial => 'events/event_icon', :locals => {:event => event}
      %p.clear

.list_items   
  %h2 Tasks
  %ul
    - @list.tasks.each do |task|
      %li.task= task.name
      
%p.clear
.bottom_space

= link_to 'Edit', edit_list_path(@list)
