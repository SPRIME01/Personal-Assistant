= semantic_form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  = f.inputs :name, :description, :due_by, :repeatable
  = f.inputs do
    = f.input :list_id, :as => :select, :collection => current_user.lists
    = f.input :group_id, :as => :select, :collection => current_user.groups
    = f.input :category_id, :as => :select, :collection => current_user.categories

  = f.buttons :commit
