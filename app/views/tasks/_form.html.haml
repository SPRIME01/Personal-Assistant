= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :due_by
    = f.datetime_select :due_by
  .field
    = f.label :list_id
    = f.text_field :list_id
  .field
    = f.label :group_id
    = f.text_field :group_id
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :category_id
    = f.text_field :category_id
  .field
    = f.label :repeatable
    = f.check_box :repeatable
  .actions
    = f.submit 'Save'
