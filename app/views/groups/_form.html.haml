= semantic_form_for @group do |f|
  -if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg
  
  = f.inputs :name, :description
  
  = f.inputs do
    = f.input :list_id, :as => :select, :collection => current_user.lists

  = f.buttons :commit
